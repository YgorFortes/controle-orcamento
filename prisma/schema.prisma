generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Receitas {
  id Int  @id @default(autoincrement()) 
  descricao String @db.VarChar(255)
  valor Float
  data DateTime
    @@map("receitas")
}

model Despesas {
  id Int @id @default(autoincrement())
  descricao String  @db.VarChar(255)
  valor Float
  data DateTime
  categoria String @db.VarChar(255)
  @@map("despesas")
}

model Usuario {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(255)
  login String @unique
  email String @unique
  senha String
  @@map("usuario")
}